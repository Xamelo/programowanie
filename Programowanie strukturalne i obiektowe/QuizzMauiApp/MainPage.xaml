<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:QuizzMauiApp"
             x:Class="QuizzMauiApp.MainPage">

    <ContentPage.BindingContext>
        <viewModel:QuizzViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="{Binding Question}"
               FontSize="45"/>

        <RadioButton/>
        <RadioButton/>
        <RadioButton/>
        <RadioButton/>

        <HorizontalStackLayout>
            <Button Text="Poprzednie pytanie"
                    WidthRequest="350"/>

            <Button Text="Kolejne pytanie"
                    WidthRequest="350"/>

            <Button Text="Sprawdź"
                    WidthRequest="350"/>

            <Button Text="Od nowa"
                    WidthRequest="350"/>
        </HorizontalStackLayout>

        <Label Text="w"
               FontSize="45"/>
    </StackLayout>

</ContentPage>
